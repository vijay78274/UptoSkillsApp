<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/course"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/customborder2"
    android:layout_marginEnd="@dimen/dim_10"
    android:layout_marginStart="@dimen/dim_10"
    android:layout_marginTop="@dimen/dim_10"
    android:layout_marginBottom="@dimen/dim_10"
    android:layout_height="wrap_content"
>

    <ImageView
        android:id="@+id/courseImage"
        android:layout_width="@dimen/dim_300"
        android:layout_gravity="center"
        android:layout_height="@dimen/dim_200"
        android:scaleType="center" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/isComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
       />

    <TextView
        android:id="@+id/CourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:maxLines="1"
        android:text="Web Technology"
        android:textSize="20sp"
        android:textStyle="bold"
/>
    <TextView
        android:text="          "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>


<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:text="4.6"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/CourseName"
        app:layout_constraintTop_toBottomOf="@id/CourseName" />

    <ImageView
        android:id="@+id/ratingImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_star"

        android:text="4.6"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/rating"
        app:layout_constraintStart_toEndOf="@id/rating"
        app:layout_constraintTop_toBottomOf="@id/CourseName" />
    <TextView
        android:text="          "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/videoLessonsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_free_course_video_lessons2"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:paddingEnd="10dp"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        android:text="UPTOSKILLS"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/rating"
        app:layout_constraintTop_toBottomOf="@id/rating" />
    <TextView
        android:text="          "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_free_course_video_lessons"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:paddingEnd="10dp"
        android:paddingBottom="2dp"
        android:text="MONEY"
        android:textSize="13sp"
        />
</LinearLayout>




</LinearLayout>
